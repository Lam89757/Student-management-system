@model Models.Student

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>添加新学员</title>
    <style type="text/css">
        li {
            list-style: none;
            padding: 10px;
        }
        input {
            border: 1px solid #D4D0C8;
        }
    </style>
</head>
<body>
    <div>
        <ul>
            <li>学员学号：<input type="text" name="stuId" /> </li>
            <li>学员姓名：<input type="text" name="stuName" /> </li>
            <li>学员性别：<input type="radio" name="gender" value="男" />男<input type="radio" name="gender" value="女" />女</li>
            <li>出生日期：<input type="text" name="birthday" /></li>
            <li>身份证号：<input type="text" name="stuIdNo" /></li>
            <li>手机号码：<input type="text" name="phoneNumber" /></li>
            <li>家庭住址：<input type="text" name="stuAddress" /></li>
            <li><input type="submit" value="添加" /></li>
        </ul>
    </div>
</body>
</html>
