
<html>
<head>
    <title>学员信息管理</title>
    <link href="~/Styles/stuManage.css" rel="stylesheet" />
</head>
<body>
    <div id="container">
        <h2>
            当前用户：@Html.Action("GetCurrentUser","SysAdmin") <a href="/SysAdmin/AdminExit">退出登录</a>
        </h2>
        <div id="querydiv">
            <div id="formdiv">
                <form method="post" action="/Student/GetStuList">
                    班级：
                    <input type="text" name="className" id="className" value="@ViewBag.className" />
                    <input type="submit" value="查询" />
                </form>
            </div>
            <div id="adddiv">  <a href="/Student/GotAdd">新增学员</a>    </div>
        </div>
        <div id="studiv">
            @{
                if (ViewBag.stuList != null)
                {
                    foreach (Models.Student stu in ViewBag.stuList)
                    {
                        <div class="stuList">
                            <div class="stuItem">
                                @stu.StudentId
                            </div>
                            <div class="stuItem">
                                @stu.StudentName
                            </div>
                            <div class="stuItem">
                                @stu.Gender
                            </div>
                            <div class="stuItem">
                                <a href="/Student/GetStuDetail/?stuId=@stu.StudentId">查看详细</a>
                            </div>
                            <div class="stuItem">
                                <a href="/Student/GetEditInfo/?stuId=@stu.StudentId">修改</a>
                            </div>
                            <div class="stuItem">
                                <a href="#">删除</a>
                            </div>
                        </div>
                    }
                }
            }
        </div>
        <br /><br />
        
    </div>
</body>
</html>
